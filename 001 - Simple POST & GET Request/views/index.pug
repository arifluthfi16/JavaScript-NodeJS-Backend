extends layout

block content
  div(class="row")
    div(class="col-lg-6")
      h1 Send with GET Request
      form(action="/sendWithGet" method="get")
        div(class="form-group")
          label Username : 
          input(type="text" class="form-control" name="username")
        div(class="form-group")
          label Email : 
          input(type="text" class="form-control"  name="email")
        button(class="btn btn-primary") Submit
    div(class="col-lg-6")
      h1 Send with GET Request
      form(action="/sendWithPost" method="post")
        div(class="form-group")
          label Username : 
          input(type="text" class="form-control" name="username")
        div(class="form-group")
          label Email : 
          input(type="text" class="form-control"  name="email")
        button(class="btn btn-warning") Submit