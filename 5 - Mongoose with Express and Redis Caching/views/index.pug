extends layout

block content
  div(class="row justify-content-center")
    h5= '{'+msg+'}'
  div(class="row" )
    div(class="col-lg-6")

      div(class="row justify-content-center")
        label Add User
      div(class="row")
        div(class="col-lg-12")
          form(class="mt-2" action="/user" method="post")
            div(class="form-group")
              label Username
              input(class="form-control" name="username")
            div(class="form-group")
              label Email
              input(class="form-control" name="email")
            button(class="btn btn-success") Submit

      div(class="row justify-content-center")
        label Find One User by Email
      div(class="row")
        div(class="col-lg-12")
          form(class="mt-2" action="/user" method="get")
            div(class="form-group")
              label Email
              input(class="form-control" name="email")
            button(class="btn btn-primary") Submit
          input(class="form-control mt-2" value=foundUsername disabled placeholder="")

    div(class="col-lg-6")

      div(class="row justify-content-center")
        label Update User by Username
      div(class="row")
        div(class="col-lg-12")
          form(class="mt-2" action="/userUpdate" method="post")
            div(class="form-group")
              label Username
              input(class="form-control" name="username")
            div(class="form-group")
              label New Email
              input(class="form-control" name="email")
            button(class="btn btn-warning") Submit

      div(class="row justify-content-center")
        label Delete User by Email
      div(class="row")
        div(class="col-lg-12")
          form(class="mt-2" action="/deleteUser" method="post")
            div(class="form-group")
              label Email
              input(class="form-control" name="email")
            button(class="btn btn-danger") Submit
        

    
